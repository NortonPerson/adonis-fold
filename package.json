{
  "name": "autoload",
  "version": "0.0.1",
  "description": "Dependency manager and ioc container for your next NodeJs application",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "use",
      "make"
    ],
    "ignore": [
      "**/out/"
    ]
  },
  "author": "norton",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "japa": "^1.0.5",
    "japa-cli": "^1.0.1",
    "nyc": "^11.2.1",
    "semver": "^5.4.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "caller": "^1.0.1",
    "debug": "^3.1.0",
    "lodash": "^4.17.4",
    "require-stack": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NortonPerson/autoload.git"
  },
  "keywords": [
    "ioc",
    "dependency",
    "injection",
    "service",
    "autoloading"
  ],
  "homepage": "https://github.com/NortonPerson/autoload#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src"
    ]
  },
  "bin": {
    "autoload": "autoload.js"
  },
  "autoload": {
    "root": "App",
    "directories": {
      "app": "./src",
      "test": "./test"
    },
    "preLoadFiles": [
      "./start.js"
    ],
    "autoloads": {
      "App": "./src",
      "Test": "./test"
    }
  }
}
